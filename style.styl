@import 'lost'

*
  margin: 0
  padding: 0
  box-sizing: border-box

html
  overflow-x: hidden
  font-family: sans-serif
  font-weight: bold
  color: white

h1
  text-align: center
  margin: (gutter * 2) 0
  a
    color: #333
    text-decoration: none

figure
  height: 100px
  line-height: 100px
  text-align: center
  margin-bottom: gutter

section
  background: #eee
  margin-top: gutter
  margin-bottom: gutter

  // Responsive Blocks
  &:nth-of-type(1)
    edit()
    figure
      column(1)
      @media (min-width: 500px)
        column(1/2)
      @media (min-width: 800px)
        column(1/3)
      @media (min-width: 1100px)
        column(1/4)

  // Offset
  &:nth-of-type(2)
    edit(green)
    figure
      column(1/3)
      &:first-child
        offset(1/3)

  // Nesting
  &:nth-of-type(3)
    edit(red)
    figure
      column(1/3)
      figure
        column(1/2) // column(1/2 1/3) if old is set to true

  // Source Ordering
  &:nth-of-type(4)
    edit(orange)
    figure
      column(1/2)
      &:first-child
        shift(1/2)
      &:last-child
        shift(-1/2)

  // Alignment
  &:nth-of-type(5)
    edit(purple)
    align()
    height: 300px
    figure
      column(1/3)
      margin-bottom: 0

  // Background Color
  &:nth-of-type(6)
    background: tomato
    figure
      column(1/3)
      background: darken(tomato, 10%)

  // Background Color to the Edges
  &:nth-of-type(7)
    center(0)
    background: cyan
    figure
      column(1/3)
      background: darken(cyan, 10%)
