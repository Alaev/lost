@import 'reset/reset.css'
@import '../lost'


html
  font-weight: bold
  color: white
  padding: $gutter
  height: auto

header
  text-align: center
  margin: $gutter 0 ($gutter * 2)

figure
  height: 100px
  line-height: 100px
  text-align: center
  margin-top: ($gutter / 2)
  margin-bottom: ($gutter / 2)
  figure
    margin-top: 0
    margin-bottom: 0

section
  cf()
  max-width: 1100px
  margin: $gutter auto

  &:last-of-type
    margin-bottom: 0

  // Responsive Blocks
  &:nth-of-type(1)
    background: #42CAFD
    figure
      block('1/1')
      background: darken(#42CAFD, 10%)
      @media (min-width: 500px)
        block('1/2')
      @media (min-width: 800px)
        block('1/3')
      @media (min-width: 1100px)
        block('1/4')

  // Offset
  &:nth-of-type(2)
    background: #66B3BA
    figure
      block('1/3')
      background: darken(#66B3BA, 10%)
      &:first-child
        offset('1/3')

  // Nesting
  &:nth-of-type(3)
    background: #8EB19D
    figure
      block('1/3')
      background: darken(#8EB19D, 10%)
      figure
        block('1/2')
        background: darken(#8EB19D, 20%)

  // Alignment
  &:nth-of-type(4)
    align()
    background: #F0D2D1
    height: 300px
    figure
      block('1/3')
      margin-top: 0
      background: darken(#F0D2D1, 10%)
      margin-bottom: 0

  // Cycle
  &:nth-of-type(5)
    background: #F19A3E
    figure
      block('1/1')
      height: auto
      line-height: 25px
      font-weight: normal
      padding: ($gutter / 2)
      background: darken(#F19A3E, 10%)
      @media (min-width: 500px)
        block('2/4', $cycle: 2)
      @media (min-width: 800px)
        block('2/6', $cycle: 3)
      @media (min-width: 1100px)
        block('2/8', $cycle: 4)

  // Vertical Grid
  &:nth-of-type(6)
    background: dodgerblue
    figure
      block('1/3', column)
      margin-top: 0
      background: darken(dodgerblue, 10%)
      padding: $gutter

  // Waffle Grid
  &:nth-of-type(7)
    background: tomato
    figure
      block('1/3', both)
      margin-top: 0
      background: darken(tomato, 10%)
      line-height: inherit
      padding: $gutter
